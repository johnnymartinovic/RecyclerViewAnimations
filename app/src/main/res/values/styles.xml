<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.General">
        <item name="android:statusBarColor">@color/general_status_bar</item>
    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/general_toolbar_text</item>
    </style>

    <style name="MainActivityButton">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3d3d3d</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/main_activity_button_background</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
